{
  "theme": "Catppuccin Mocha",
  "auto-update": false,
  "autosave": {
    "after_delay": {
      "milliseconds": 500
    }
  },
  "buffer_font_family": "JetBrains Mono",
  "buffer_font_size": 17,
  "experimental.theme_overrides": {
    "background": "#1e1e2eCC",
    "background.appearance": "transparent",
    "border": "#00000000",
    "border.variant": "#00000000",
    "editor.active_line.background": "#313244CC",
    "editor.active_line_number": "#b4befeCC",
    "editor.background": "#1e1e2eCC",
    "editor.gutter.background": "#1e1e2eCC",
    "editor.line_number": "#585b70CC",
    "panel.background": "#00000000",
    "tab.active_background": "#1e1e2eCC",
    "tab.inactive_background": "#00000000",
    "tab_bar.background": "#1e1e2eCC",
    "terminal.background": "#00000000",
    "title_bar.background": "#1e1e2eCC",
    "toolbar.background": "#1e1e2eCC",
    "status_bar.background": "#1e1e2eCC"
  },
  "languages": {
    "Nix": {
      "language_servers": [
        "nixd",
        "!nil"
      ]
    }
  },
  "lsp": {
    "nixd": {
      "binary": {
        "path_lookup": true
      }
    },
    "rust-analyzer": {
      "binary": {
        // "arguments": [
        //   "-c",
        //   "if [ -e flake.nix ]; then nix develop --command rust-analyzer; else rust-analyzer; fi"
        // ],
        "initialization_options": {
          "check": {
            "command": "clippy"
          }
        },
        "path": "/run/current-system/sw/bin/bash"
      }
    }
  },
  "project_panel": {
    "entry_spacing": "comfortable",
    "sticky_scroll": false
  },
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "ui_font_family": "Noto Sans",
  "ui_font_size": 14,
  "vim_mode": false
}