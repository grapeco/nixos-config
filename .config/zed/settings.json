{
  "icon_theme": "Zed (Default)",
  "theme": {
    "mode": "dark",
    "light": "Catppuccin Mocha",
    "dark": "Catppuccin Mocha"
  },
  "auto-update": false,
  "autosave": {
    "after_delay": {
      "milliseconds": 500
    }
  },
  "buffer_font_family": "JetBrains Mono",
  "buffer_font_size": 17,
  "experimental.theme_overrides": {
    "background": "#1e1e2e",
    "border": "#1e1e2e",
    "border.variant": "#1e1e2e",
    "editor.active_line.background": "#313244",
    "editor.active_line_number": "#b4befe",
    "editor.background": "#1e1e2e",
    "editor.gutter.background": "#1e1e2e",
    "editor.line_number": "#585b70",
    "panel.background": "#181825",
    "tab.active_background": "#181825",
    "tab.inactive_background": "#1e1e2e",
    "tab_bar.background": "#1e1e2e",
    "title_bar.background": "#181825",
    "toolbar.background": "#1e1e2e",
    "status_bar.background": "#1e1e2e"
  },
  "languages": {
    "Nix": {
      "language_servers": [
        "nixd",
        "!nil"
      ]
    }
  },
  "lsp": {
    "nixd": {
      "binary": {
        "path_lookup": true
      }
    },
    "rust-analyzer": {
      "binary": {
        // "arguments": [
        //   "-c",
        //   "if [ -e flake.nix ]; then nix develop --command rust-analyzer; else rust-analyzer; fi"
        // ],
        "initialization_options": {
          "check": {
            "command": "clippy"
          }
        },
        "path": "/run/current-system/sw/bin/bash"
      }
    }
  },
  "project_panel": {
    "entry_spacing": "comfortable",
    "sticky_scroll": false
  },
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "ui_font_family": "Noto Sans",
  "ui_font_size": 14,
  "vim_mode": false
}